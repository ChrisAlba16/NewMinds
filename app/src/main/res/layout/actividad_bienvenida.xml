<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewMinds"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="@color/white_text"/>

    <TextView
        android:id="@+id/layout_subtitle_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollando Habilidades Especiales"
        android:textSize="20sp"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:textColor="@color/white_text"/>
    <TextView
        android:id="@+id/layout_subtitle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para Personas Especiales"
        android:textSize="20sp"
        android:layout_below="@+id/layout_subtitle_one"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white_text"/>
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_boton_empezar"
        android:textColor="@color/blue_pair"
        android:text="Empecemos"
        android:textSize="20sp"
        android:layout_below = "@+id/layout_subtitle_two"
        android:layout_marginTop="150dp"/>

</RelativeLayout>