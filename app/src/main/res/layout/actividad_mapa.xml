<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_gris">

    <RelativeLayout
        android:id="@+id/seccion_uno"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fondo_boton_borde"
        android:padding="16dp">

        <TextView
            android:id="@+id/materia_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="17sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seccion_uno">

        <LinearLayout
            android:id="@+id/seccion_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

</RelativeLayout>